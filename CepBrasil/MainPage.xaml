                            <Label
                                x:Name="resultDDD"
                                FontAttributes="Bold"
                                FontSize="15"
                                Text=""
                                TextColor="Blue"
                                TextDecorations="Underline" />
                        </StackLayout>
                    </HorizontalStackLayout>

                    <BoxView
                        Margin="0,5,0,20"
                        HeightRequest="0.5"
                        Color="#7B7B7B" />

                    <HorizontalStackLayout Margin="20,20">
                        <Label
                            FontAttributes="Bold"
                            FontSize="15"
                            Text="Siafi" />
                        <StackLayout
                            Margin="117,0,0,0"
                            HorizontalOptions="Center"
                            VerticalOptions="Center">
                            <Label
                                x:Name="resultSiafi"
                                FontAttributes="Bold"
                                FontSize="15"
                                Text=""
                                TextColor="Blue"
                                TextDecorations="Underline" />
                        </StackLayout>
                    </HorizontalStackLayout>

                    <BoxView
                        Margin="0,5,0,20"
                        HeightRequest="0.5"
                        Color="#7B7B7B" />

                    <HorizontalStackLayout Margin="20,20">
                        <Label
                            FontAttributes="Bold"
                            FontSize="15"
                            Text="IBGE" />
                        <StackLayout
                            Margin="115,0,0,0"
                            HorizontalOptions="Center"
                            VerticalOptions="Center">
                            <Label
                                x:Name="resultIBGE"
                                FontAttributes="Bold"
                                FontSize="15"
                                Text=""
                                TextColor="Blue"
                                TextDecorations="Underline" />
                        </StackLayout>
                    </HorizontalStackLayout>



                </VerticalStackLayout>
            </Border>

            <Button
                Margin="60,20,60,0"
                Clicked="Button_Clicked_1"
                FontSize="15"
                Text="Novo Cep" />

        </VerticalStackLayout>
    </VerticalStackLayout>



</ContentPage>